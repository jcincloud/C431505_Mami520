@{
    ViewBag.Title = "電訪名單 管理";
    ViewBag.BodyClass = "ch7 p2";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section breadCrumb {
    <li><a href=""><i class="fa-list-alt"></i> 通訊系統</a></li>
}

<h3 class="title">@ViewBag.Title</h3>

<h4 class="title">客戶基本資料</h4>

<form class="form-horizontal clearfix" role="form">
	<div class="col-xs-9">
		<div class="form-group">
			<label class="col-xs-2 control-label">客戶名稱</label>
			<div class="col-xs-3">
				<input type="text" class="form-control" disabled />
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">用餐編號</label>
			<div class="col-xs-3">
				<input type="text" class="form-control" disabled />
			</div>
			<label class="col-xs-2 control-label">媽媽姓名</label>
			<div class="col-xs-3">
				<input type="text" class="form-control" disabled />
			</div>
		</div>
		<div class="bg-warning">
			<div class="form-group">
				<label class="col-xs-2 control-label">連絡電話1</label>
				<div class="col-xs-3">
					<input type="text" class="form-control" disabled />
				</div>
				<label class="col-xs-2 control-label">連絡電話2</label>
				<div class="col-xs-3">
					<input type="text" class="form-control" disabled />
				</div>
			</div>
			<div class="form-group">
				<label class="col-xs-2 control-label">身分證號</label>
				<div class="col-xs-3">
					<input type="text" class="form-control" disabled />
				</div>
				<label class="col-xs-2 control-label">生日</label>
				<div class="col-xs-3">
					<input type="text" class="form-control" disabled />
				</div>
			</div>
			<div class="form-group">
				<label class="col-xs-2 control-label">送餐地址</label>
				<div class="col-xs-1">
					<input type="text" class="form-control" disabled>
				</div>
				<div class="col-xs-2">
					<select class="form-control" disabled>
						<option value="">縣市</option>
						<option value="">台北市</option>
					</select>
				</div>
				<div class="col-xs-2">
					<select class="form-control" disabled>
						<option value="">鄉鎮市區</option>
						<option value="">大安區</option>
					</select>
				</div>
				<div class="col-xs-3">
					<input type="text" class="form-control" disabled />
				</div>
				<small class="help-inline col-xs-2 text-danger">(必填)</small>
			</div>
			<div class="form-group">
				<label class="col-xs-2 control-label">備用地址</label>
				<div class="col-xs-1">
					<input type="text" class="form-control" disabled>
				</div>
				<div class="col-xs-2">
					<select class="form-control" disabled>
						<option value="">縣市</option>
						<option value="">台北市</option>
					</select>
				</div>
				<div class="col-xs-2">
					<select class="form-control" disabled>
						<option value="">鄉鎮市區</option>
						<option value="">大安區</option>
					</select>
				</div>
				<div class="col-xs-3">
					<input type="text" class="form-control" disabled />
				</div>
			</div>
		</div>
		<div class="form-action text-center">
			<button class="btn-primary">生產紀錄</button>
			<button class="btn-success">購買紀錄</button>
			<button class="btn-primary">飲食需求</button>
			<button class="btn-success">用餐排程異動紀錄</button>
			<button class="btn-primary">付款紀錄</button>
		</div>
	</div>
</form>

<hr class="condensed" />

<h4 class="title">新增電訪紀錄</h4>

<form class="form-horizontal clearfix" role="form">
	<div class="col-xs-9">
		<div class="form-group">
			<label class="col-xs-2 control-label">電訪時間</label>
			<div class="col-xs-3">
				<input type="text" class="form-control" />
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">電訪原因</label>
			<div class="col-xs-3">
				<select class="form-control">
					<option value="">客戶來電</option>
					<option value="">收頭款</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">電訪人員</label>
			<div class="col-xs-3">
				<input type="text" class="form-control" />
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">電訪狀態</label>
			<div class="col-xs-3">
				<select class="form-control">
					<option value="">完成</option>
					<option value="">未接通</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">電訪內容</label>
			<div class="col-xs-10">
				<textarea rows="3" class="form-control"></textarea>
			</div>
		</div>
		<div class="form-action text-right">
			<button class="btn-primary"><i class="fa-check"></i> 存檔確認</button>
			<button><i class="fa-times"></i> 回列表</button>
		</div>
	</div>
</form>

<hr class="condensed" />

<h4 class="title">電訪紀錄</h4>

<div class="row">
	<div class="col-xs-9">
		<table class="table-condensed">
					<tr>
						<th class="col-xs-3">時間</th>
						<th class="col-xs-2">原因</th>
						<th class="col-xs-4">內容</th>
						<th class="col-xs-1">狀態</th>
						<th class="col-xs-2">人員</th>
					</tr>
					<tr>
						<td><strong>2015/10/10 10:00</strong></td>
						<td>收頭款</td>
						<td>下次送餐 (10/11 晚餐) 時，付現金</td>
						<td><span class="label label-success">完成</span></td>
						<td>XXX</td>
					</tr>
					<tr>
						<td><strong>2015/10/10 10:00</strong></td>
						<td>收頭款</td>
						<td></td>
						<td><span class="label label-danger">未接通</span></td>
						<td>XXX</td>
					</tr>
				</table>
	</div>
</div>