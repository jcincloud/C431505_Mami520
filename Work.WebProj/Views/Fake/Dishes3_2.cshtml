@{
    ViewBag.Title = "組合菜單 管理";
    ViewBag.BodyClass = "ch5 p3";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section breadCrumb {
    <li><a href=""><i class="fa-list-alt"></i> 菜單管理</a></li>
}

<h3 class="title">@ViewBag.Title</h3>

<h4 class="title">組合菜單編輯</h4>

<form class="form-horizontal clearfix" role="form" action="~/Fake/Dishes3">
	<div class="col-xs-9">
		<div class="form-group">
			<label class="col-xs-2 control-label">分類</label>
			<div class="col-xs-4">
				<select class="form-control">
					<option value="" class="form-control">主食</option>
				</select>
			</div>
			<small class="help-inline col-xs-6 text-danger">(必填)</small>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">菜名</label>
			<div class="col-xs-4">
				<input type="text" class="form-control" />
			</div>
			<small class="help-inline col-xs-6 text-danger">(必填)</small>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">狀態</label>
			<div class="col-xs-4">
				<div class="radio-inline">
					<label>
						<input type="radio" name="radio-test2" checked>
						<span>啟用</span>
					</label>
				</div>
				<div class="radio-inline">
					<label>
						<input type="radio" name="radio-test2">
						<span>停用</span>
					</label>
				</div>
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">排序</label>
			<div class="col-xs-4">
				<input type="text" class="form-control" />
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">備註</label>
			<div class="col-xs-10">
				<textarea class="form-control" row="3"></textarea>
			</div>
		</div>
		<div class="form-action text-right">
			<button class="btn-primary"><i class="fa-check"></i> 存檔確認</button>
			<button><i class="fa-times"></i> 回列表</button>
		</div>
	</div>
</form>

<hr class="condensed" />

<h4 class="title">食材對應設定</h4>

@* 主檔還沒新增，會出現的畫面 *@
<div class="alert alert-warning">
	請先按上方的 <strong>存檔確認</strong>，再進行設定。
</div>

@* 主檔新增完成後，會出現的畫面 *@
