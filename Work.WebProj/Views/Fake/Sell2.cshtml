@{
    ViewBag.Title = "產品銷售資料 管理";
    ViewBag.BodyClass = "ch2 p2";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section breadCrumb {
    <li><a href=""><i class="fa-list-alt"></i> 銷售紀錄</a></li>
}

<h3 class="title">@ViewBag.Title</h3>

<h4 class="title">產品銷售資料主檔</h4>
<form class="form-horizontal clearfix" role="form">
	<div class="col-xs-8">
		<div class="form-group">
			<label class="col-xs-2 control-label">訂單日期</label>
			<div class="col-xs-4">
				<input type="text" class="form-control" disabled />
			</div>
			<label class="col-xs-2 control-label">銷售單號</label>
			<div class="col-xs-4">
				<input type="text" class="form-control" disabled />
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">生產編號</label>
			<div class="col-xs-4">
				<input type="text" class="form-control" disabled />
			</div>
			<label class="col-xs-2 control-label">客戶編號</label>
			<div class="col-xs-4">
				<input type="text" class="form-control" disabled />
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">客戶名稱</label>
			<div class="col-xs-4">
				<input type="text" class="form-control" disabled />
			</div>
			<label class="col-xs-2 control-label">客戶分類</label>
			<div class="col-xs-4">
				<select class="form-control" name="" id="" disabled>
					<option value="">自有客戶</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">用餐編號</label>
			<div class="col-xs-4">
				<input type="text" class="form-control" disabled />
			</div>
			<label class="col-xs-2 control-label">媽媽姓名</label>
			<div class="col-xs-4">
				<input type="text" class="form-control" disabled />
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">連絡電話1</label>
			<div class="col-xs-4">
				<input type="text" class="form-control" disabled />
			</div>
			<label class="col-xs-2 control-label">連絡電話2</label>
			<div class="col-xs-4">
				<input type="text" class="form-control" disabled />
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">身分證號</label>
			<div class="col-xs-4">
				<input type="text" class="form-control" disabled />
			</div>
			<label class="col-xs-2 control-label">生日</label>
			<div class="col-xs-4">
				<input type="text" class="form-control" disabled />
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">送餐地址</label>
			<div class="col-xs-10">
				<input type="text" class="form-control" disabled />
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">備用地址</label>
			<div class="col-xs-10">
				<input type="text" class="form-control" disabled />
			</div>
		</div>
	</div>
	<div class="col-xs-8">
		<p class="text-right">
			<strong>主檔資料不可修改！</strong>
			<button><i class="fa-times"></i> 回列表</button>
		</p>
	</div>
</form>

<hr class="condensed" />

<h4 class="title clearfix">
	<div class="col-xs-8">
		<span class="pull-left">是否結案：<strong class="text-danger">未結案</strong></span>
		<span class="pull-right">
			<button class="btn-danger"><i class="fa-times"></i> 設為 未結案</button>
			<button class="btn-success"><i class="fa-check"></i> 設為 已結案</button>
		</span>
	</div>
</h4>

<h4 class="title">新增產品明細</h4>
<div class="row">
	<div class="item-box">
		<div class="item-title">
			<h5>產品明細基本資料</h5>
		</div>
		<div class="panel-body">
			<form class="form-horizontal clearfix" role="form">
				<div class="form-group">
					<label class="col-xs-2 control-label">銷售日期</label>
					<div class="col-xs-2">
						<input type="text" class="form-control" />
					</div>
					<label class="col-xs-1 control-label">分類</label>
					<div class="col-xs-2">
						<input type="text" class="form-control" disabled />
					</div>
				</div>
				<div class="form-group">
					<label class="col-xs-2 control-label">產品編號</label>
					<div class="col-xs-2">
						<div class="input-group">
							<input type="text" class="form-control">
							<span class="input-group-btn">
								<button type="button">...</button>
							</span>
						</div>
					</div>
					<label class="col-xs-1 control-label">名稱</label>
					<div class="col-xs-2">
						<input type="text" class="form-control" disabled />
					</div>
				</div>
				<div class="form-group">
					<label class="col-xs-2 control-label">售價</label>
					<div class="col-xs-2">
						<input type="text" class="form-control" />
					</div>
					<label class="col-xs-1 control-label">規格</label>
					<div class="col-xs-2">
						<input type="text" class="form-control" />
					</div>
				</div>
				<div class="form-group">
					<label class="col-xs-2 control-label">數量</label>
					<div class="col-xs-2">
						<input type="text" class="form-control" />
					</div>
					<label class="col-xs-1 control-label">小計</label>
					<div class="col-xs-2">
						<input type="text" class="form-control" />
					</div>
				</div>
				<div class="form-group">
					<label class="col-xs-2 control-label">備註</label>
					<div class="col-xs-5">
						<textarea rows="2" class="form-control"></textarea>
					</div>
				</div>
			</form>
		</div>
		<div class="item-title">
			<h5>
				用餐排程 &amp; 試算
				<small class="text-muted">產品分類為 "月子餐" 才需填寫!!</small>
			</h5>
		</div>
		<div class="panel-body">
			<form class="form-horizontal clearfix" role="form">
				<div class="form-group">
					<label class="col-xs-2 control-label">預計送餐起日</label>
					<div class="col-xs-2">
						<input type="text" class="form-control" />
					</div>
					<label class="col-xs-2 control-label">預計送餐迄日</label>
					<div class="col-xs-2">
						<input type="text" class="form-control" />
					</div>
					<div class="col-xs-2">
						<label class="col-xs-8 control-label">預計天數</label>
						<div class="col-xs-4">
						<input type="text" class="form-control" disabled />
					</div>
					</div>
				</div>
				<div class="form-group">
					<label class="col-xs-2 control-label">預計餐數</label>
					<div class="col-xs-1">
						<div class="input-group">
							<span class="input-group-addon" id="meal1-1">早</span>
							<input type="text" class="form-control" aria-describedby="meal1-1">
						</div>
					</div>
					<div class="col-xs-1">
						<div class="input-group">
							<span class="input-group-addon" id="meal1-2">午</span>
							<input type="text" class="form-control" aria-describedby="meal1-2">
						</div>
					</div>
					<div class="col-xs-1">
						<div class="input-group">
							<span class="input-group-addon" id="meal1-3">晚</span>
							<input type="text" class="form-control" aria-describedby="meal1-3">
						</div>
					</div>
					<div class="col-xs-3">
						<label class="col-xs-6 control-label">預計點數</label>
						<div class="col-xs-6">
							<input type="text" class="form-control" disabled />
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="col-xs-2 control-label">實際餐數</label>
					<div class="col-xs-1">
						<div class="input-group">
							<span class="input-group-addon" id="meal2-1">早</span>
							<input type="text" class="form-control" aria-describedby="meal2-1" disabled>
						</div>
					</div>
					<div class="col-xs-1">
						<div class="input-group">
							<span class="input-group-addon" id="meal2-2">午</span>
							<input type="text" class="form-control" aria-describedby="meal2-2" disabled>
						</div>
					</div>
					<div class="col-xs-1">
						<div class="input-group">
							<span class="input-group-addon" id="meal2-3">晚</span>
							<input type="text" class="form-control" aria-describedby="meal2-3" disabled>
						</div>
					</div>
					<div class="col-xs-3">
						<label class="col-xs-6 control-label">實際點數</label>
						<div class="col-xs-6">
							<input type="text" class="form-control" disabled />
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="col-xs-2 control-label">用餐週期<br />說明</label>
					<div class="col-xs-8">
						<textarea rows="2" class="form-control"></textarea>
					</div>
				</div>
			</form>
		</div>
		<div class="panel-footer">
			<button class="btn-primary col-xs-offset-9">
				<i class="fa-check"></i> 存檔確認
			</button>
		</div>
	</div>
</div>


<hr class="condensed" />

<h4 class="title">產品明細</h4>

<table class="table-condensed">
	<tr>
		<th class="col-xs-1 text-center">編輯</th>
		<th class="col-xs-2">明細單號</th>
		<th class="col-xs-4">產品名稱</th>
		<th class="col-xs-1">單價</th>
		<th class="col-xs-1">數量</th>
		<th class="col-xs-1">小計</th>
		<th class="col-xs-2 text-center">用餐明細</th>
	</tr>
	<tr>
		<td class="text-center">
			<button class="btn-link text-danger"><i class="fa-trash"></i></button>
			<button class="btn-link"><i class="fa-pencil"></i></button>
		</td>
		<td>A100</td>
		<td>XXX</td>
		<td>100</td>
		<td>10</td>
		<td>1000</td>
		<td class="text-center"><button class="btn-info btn-sm"><i class="fa-search"></i> 查看</button></td>
	</tr>
</table>