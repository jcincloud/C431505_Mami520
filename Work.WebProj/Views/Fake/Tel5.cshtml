@{
    ViewBag.Title = "文案內容 管理";
    ViewBag.BodyClass = "ch7 p5";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section breadCrumb {
    <li><a href=""><i class="fa-list-alt"></i> 通訊系統</a></li>
}

<h3 class="title">@ViewBag.Title</h3>

<h4 class="title">文案內容列表</h4>

<div class="table-responsive">

    <div class="table-header">
        <div class="table-filter">
            <div class="form-inline">
            	<div class="form-group">
                    <label for="">文案名稱</label>
                    <input type="text" class="form-control input-sm" />
                </div>
                <div class="form-group">
                    <button class="btn-primary btn-sm"><i class="fa-search"></i> 搜尋</button>
                </div>
            </div>
        </div>
    </div>

    <table class="table-condensed">
        <thead>
            <tr>
                <th class="col-xs-1 text-center">
                    <label class="cbox">
                        <input type="checkbox">
                        <i class="fa-check"></i>
                    </label>
                </th>
                <th class="col-xs-1 text-center">修改</th>
                <th class="col-xs-9">文案名稱</th>
                <th class="col-xs-1">狀態</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-center">
                    <label class="cbox">
                        <input type="checkbox">
                        <i class="fa-check"></i>
                    </label>
                </td>
                <td class="text-center">
                    <a href="~/Fake/Tel5_2"><button class="btn-link btn-lg"><i class="fa-pencil"></i></button></a>
                </td>
                <td>XXXXXXXXXXX</td>
                <td><span class="label label-primary">啟用</span></td>
            </tr>
            <tr>
                <td class="text-center">
                    <label class="cbox">
                        <input type="checkbox">
                        <i class="fa-check"></i>
                    </label>
                </td>
                <td class="text-center">
                    <a href="~/Fake/Tel5_2"><button class="btn-link btn-lg"><i class="fa-pencil"></i></button></a>
                </td>
                <td>XXXXXXXXXXX</td>
                <td><span class="label label-default">停用</span></td>
            </tr>
        </tbody>
    </table>

    <div class="table-footer">
        <div class="pull-left">
            <a href="~/Fake/Tel5_2"><button class="btn-link text-success"><i class="fa-plus-circle"></i> 新增</button></a>
            <button class="btn-link text-danger"><i class="fa-trash-o"></i> 刪除</button>
        </div>
        <small class="pull-right">第1-3筆，共3筆</small>
        <ul class="pager">
            <li class="disabled"><a href="" title="第一頁"><i class="fa-angle-double-left"></i></a></li>
            <li class="disabled"><a href="" title="上一頁"><i class="fa-angle-left"></i></a></li>
            <li class="form-inline">
                <div class="form-group">
                    <label for="">第</label>
                    <input type="text" class="form-control text-center" value="1" style="width:50px;">
                    <label for="">頁，共3頁</label>
                </div>
            </li>
            <li><a href="" title="下一頁"><i class="fa-angle-right"></i></a></li>
            <li><a href="" title="最後一頁"><i class="fa-angle-double-right"></i></a></li>
        </ul>
    </div>
</div><!-- 後台常用列表 //-->