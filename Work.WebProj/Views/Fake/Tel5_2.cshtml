@{
    ViewBag.Title = "文案內容 管理";
    ViewBag.BodyClass = "ch7 p5";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section breadCrumb {
    <li><a href=""><i class="fa-list-alt"></i> 通訊系統</a></li>
}

<h3 class="title">@ViewBag.Title</h3>

<h4 class="title">文案內容編輯</h4>

<form class="form-horizontal clearfix" role="form" action="~/Fake/Tel5">
	<div class="col-xs-9">
		<div class="form-group">
			<label class="col-xs-2 control-label">文案名稱</label>
			<div class="col-xs-4">
				<input type="text" class="form-control" />
			</div>
			<small class="help-inline col-xs-6 text-danger">(必填)</small>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">標題</label>
			<div class="col-xs-4">
				<input type="text" class="form-control" />
			</div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">排序</label>
			<div class="col-xs-4">
				<input type="text" class="form-control" />
			</div>
			<small class="help-inline col-xs-6">數字愈大愈前面，未填寫視為 0</small>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label">內容</label>
			<div class="col-xs-10">
				<textarea class="form-control" row="5"></textarea>
			</div>
		</div>
		<div class="form-action text-right">
			<button class="btn-primary"><i class="fa-check"></i> 存檔確認</button>
			<button><i class="fa-times"></i> 回列表</button>
		</div>
	</div>
</form>