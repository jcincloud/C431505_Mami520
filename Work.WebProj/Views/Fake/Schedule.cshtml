@{
    ViewBag.Title = "用餐紀錄 管理";
    ViewBag.BodyClass = "ch4";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section CSS {
	<style>
		.meal {
			width: 6em;
			margin:0 auto;
		}
	</style>
}

<h3 class="title">@ViewBag.Title</h3>

<h4 class="title">客戶用餐紀錄列表</h4>

<div class="table-responsive">

    <div class="table-header">
        <div class="table-filter">
            <div class="form-inline">
                <div class="form-group">
                    <label for="">用餐編號/媽媽姓名/身分證號/電話</label>
                    <input type="text" class="form-control input-sm" placeholder="請擇一填寫" />
                </div>
                <div class="form-group">
                    <label for="">送餐日期</label>
                    <span class="has-feedback">
                        <input type="text" class="form-control input-sm datetimepicker" style="width:130px;" />
                        <i class="fa-calendar form-control-feedback"></i>
                    </span>
                    <label for="">~</label>
                    <span class="has-feedback">
                        <input type="text" class="form-control input-sm datetimepicker" style="width:130px;" />
                        <i class="fa-calendar form-control-feedback"></i>
                    </span>
                </div>
                <div class="form-group">
                    <label for="">是否結案</label>
                    <select class="form-control input-sm">
                        <option value="">全部</option>
                        <option value="">已結案</option>
                        <option value="">未結案</option>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn-primary btn-sm"><i class="fa-search"></i> 搜尋</button>
                </div>
            </div>
        </div>
    </div>

    <table class="table-condensed">
        <thead>
            <tr>
                <th class="col-xs-1 text-center">修改</th>
                <th class="col-xs-1">用餐編號</th>
                <th class="col-xs-1">媽媽姓名</th>
                <th class="col-xs-2">身分證號</th>
                <th class="col-xs-2">電話1</th>
                <th class="col-xs-2">送餐起日</th>
                <th class="col-xs-2">送餐迄日</th>
                <th class="col-xs-1">是否結案</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-center">
                    <a href="~/Fake/Schedule_2"><button class="btn-link btn-lg"><i class="fa-pencil"></i></button></a>
                </td>
                <td>A001</td>
                <td>陳小姐</td>
                <td>A123456789</td>
                <td>0912345678</td>
                <td>2015/11/11</td>
                <td>2015/11/11</td>
                <td><span class="label label-danger">未結案</span></td>
            </tr>
            <tr>
                <td class="text-center">
                    <a href="~/Fake/Schedule_2"><button class="btn-link btn-lg"><i class="fa-pencil"></i></button></a>
                </td>
                <td>A001</td>
                <td>陳小姐</td>
                <td>A123456789</td>
                <td>0912345678</td>
                <td>2015/11/11</td>
                <td>2015/11/11</td>
                <td><span class="label label-success">已結案</span></td>
            </tr>
        </tbody>
    </table>

    <div class="table-footer">
        <small class="pull-right">第1-3筆，共3筆</small>
        <ul class="pager">
            <li class="disabled"><a href="" title="第一頁"><i class="fa-angle-double-left"></i></a></li>
            <li class="disabled"><a href="" title="上一頁"><i class="fa-angle-left"></i></a></li>
            <li class="form-inline">
                <div class="form-group">
                    <label for="">第</label>
                    <input type="text" class="form-control text-center" value="1" style="width:50px;">
                    <label for="">頁，共3頁</label>
                </div>
            </li>
            <li><a href="" title="下一頁"><i class="fa-angle-right"></i></a></li>
            <li><a href="" title="最後一頁"><i class="fa-angle-double-right"></i></a></li>
        </ul>
    </div>
</div><!-- 後台常用列表 //-->