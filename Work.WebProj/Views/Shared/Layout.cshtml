<!DOCTYPE html>
<html lang="zh-TW">
<!-- saved from url=(0014)about:internet -->

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@Resources.Res.System_Name:@ViewBag.Title</title>
    @RenderSection("CSS", required: false)
    <link rel="stylesheet" href="~/Content/css/_new/sys.css">
    <!--[if IE 9]><link rel="stylesheet" href="@Url.Content("~/_Code/css/css/ie9-page.css")"><![endif]-->
</head>
<body class="@ViewBag.BodyClass">

    <div id="wrapper">

        @if (ViewBag.IsFirstPage) {}
        else {
        <header id="header">

            <h1 class="logo"><a href="">@Resources.Res.System_Name</a></h1>

            <nav id="top-nav">
                <h2 class="hidden">基本設定</h2>
                <ul class="nav-menu">
                    <li>
                        <i class="ti-user"></i>登入身分: <span class="name">manager</span>
                    </li>
                    <li>
                        <a href="#"><i class="ti-power-off"></i>登出</a>
                    </li>
                </ul>
            </nav>

        </header><!-- header //-->
        }

        <main id="main">

            @if (ViewBag.IsFirstPage) {
                @RenderBody()
            }
            
            else {

            <aside id="sidebar">

                <h3 class="title">
                    <i class="brand"><img src="" alt=""></i>
                    <strong>功能選單</strong>
                    <em>MENU</em>
                </h3>

                <div id="submenu">
                    <ul class="panel">

                        <li id="submenu-1" class="panel-heading">
                            <a class="panel-title collapsed" data-toggle="collapse" data-parent="#submenu" href="#submenu-1-list">
                                <i class="fa-list-alt"></i> A. 生產紀錄 <small class="ti-angle-right"></small>
                            </a>
                        </li>
                        <li id="submenu-1-list" class="panel-collapse collapse">
                            <ul class="panel-body">
                                <li><a href="~/Fake/Birth">01. 客戶基本資料 管理</a></li>
                                <li><a href="~/Fake/Birth2">02. 客戶生產紀錄 管理</a></li>
                                <li><a href="~/Fake/Birth3">03. 用餐編號 管理</a></li>
                            </ul>
                        </li>

                        <li id="submenu-2" class="panel-heading">
                            <a class="panel-title collapsed" data-toggle="collapse" data-parent="#submenu" href="#submenu-2-list">
                                <i class="fa-list-alt"></i> B. 銷售紀錄
                            </a>
                        </li>
                        <li id="submenu-2-list" class="panel-collapse collapse">
                            <ul class="panel-body">
                                <li><a href="~/Fake/Sell">01. 產品基本資料 管理</a></li>
                                <li><a href="~/Fake/Sell2">02. 產品銷售資料 管理</a></li>
                            </ul>
                        </li>

                        <li id="submenu-3" class="panel-heading">
                            <a class="panel-title collapsed" data-toggle="collapse" data-parent="#submenu" href="#submenu-3-list">
                                <i class="fa-list-alt"></i> C. 需求表
                            </a>
                        </li>
                        <li id="submenu-3-list" class="panel-collapse collapse">
                            <ul class="panel-body">
                                <li><a href="~/Fake/Require">01. 需求元素 管理</a></li>
                                <li><a href="~/Fake/Require2">02. 客戶需求 管理</a></li>
                            </ul>
                        </li>

                        <li id="submenu-4" class="panel-heading">
                            <a class="panel-title collapsed"  href="~/Fake/Schedule">
                                <i class="fa-list-alt"></i> D. 用餐紀錄 管理
                            </a>
                        </li>

                        <li id="submenu-5" class="panel-heading">
                            <a class="panel-title collapsed" data-toggle="collapse" data-parent="#submenu" href="#submenu-5-list">
                                <i class="fa-list-alt"></i> E. 菜單管理
                            </a>
                        </li>
                        <li id="submenu-5-list" class="panel-collapse collapse">
                            <ul class="panel-body">
                                <li><a href="~/Fake/Dishes">01. 基礎菜單 管理</a></li>
                                <li><a href="~/Fake/Dishes2">02. 基礎菜單分類 管理</a></li>
                                <li><a href="~/Fake/Dishes3">03. 組合菜單 管理</a></li>
                                <li><a href="~/Fake/Dishes4">04. 每日菜單 管理</a></li>
                            </ul>
                        </li>

                        <li id="submenu-6" class="panel-heading">
                            <a class="panel-title collapsed" data-toggle="collapse" data-parent="#submenu" href="#submenu-6-list">
                                <i class="fa-list-alt"></i> F. 禮品發放
                            </a>
                        </li>
                        <li id="submenu-6-list" class="panel-collapse collapse">
                            <ul class="panel-body">
                                <li><a href="~/Fake/Gift">01. 活動基本資料 管理</a></li>
                                <li><a href="~/Fake/Gift2">02. 禮品贈送紀錄 管理</a></li>
                            </ul>
                        </li>

                        <li id="submenu-7" class="panel-heading">
                            <a class="panel-title collapsed" data-toggle="collapse" data-parent="#submenu" href="#submenu-7-list">
                                <i class="fa-list-alt"></i> G. 通訊系統
                            </a>
                        </li>
                        <li id="submenu-7-list" class="panel-collapse collapse">
                            <ul class="panel-body">
                                <li><a href="~/Fake/Tel">01. 每日電訪名單 管理</a></li>
                                <li><a href="~/Fake/Tel2">02. 電訪名單 管理</a></li>
                                <li><a href="~/Fake/Tel3">03. 發送訊息 管理</a></li>
                                <li><a href="~/Fake/Tel4">04. 發送條件 管理</a></li>
                                <li><a href="~/Fake/Tel5">05. 文案內容 管理</a></li>
                            </ul>
                        </li>

                        <li id="submenu-8" class="panel-heading">
                            <a class="panel-title collapsed"  href="~/Fake/Check">
                                <i class="fa-list-alt"></i> H. 結帳作業
                            </a>
                        </li>

                        <li id="submenu-9" class="panel-heading">
                            <a class="panel-title collapsed" data-toggle="collapse" data-parent="#submenu" href="#submenu-9-list">
                                <i class="fa-list-alt"></i> I. 報表列印作業
                            </a>
                        </li>
                        <li id="submenu-9-list" class="panel-collapse collapse">
                            <ul class="panel-body">
                                <li><a href="~/Fake/Report">01. 每日菜單報表</a></li>
                                <li><a href="~/Fake/Report2">02. 產品銷售報表</a></li>
                                <li><a href="~/Fake/Report3">03. 應收帳款明細</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </aside><!-- sidebar //-->

            <div id="content">

                <ul class="breadcrumb">
                    <li><a href=""><i class="ti-home"></i> @Resources.Res.System_Name</a></li>
                    @RenderSection("breadCrumb", required: false)
                    <li>@ViewBag.Title</li>
                </ul>

                @RenderBody()

            </div><!-- content //-->

            }

        </main><!-- main //-->

    </div><!-- wrapper //-->

    @* <footer id="footer">

        <a href="#content" class="goTop"><i class="fa-angle-double-up"></i></a>

    </footer><!-- footer //--> *@

    <script src="~/Scripts/jquery/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/app/bootstrap.min.js"></script>
    <script>
        //左選單的當前頁標示
        var ch = $('body').attr('class').match(/\d+/);
        $("#submenu-"+ch).each(function() {
            $(this).children('.panel-title').removeClass('collapsed');
            if ( $(this).next(".panel-collapse").length ) {}
            else {
                $(this).children('.panel-title').addClass('current'); //沒有子選單的項目要加 current
            }
        });
        var p = $('body').attr('class').match(/\d+$/);
        $("#submenu-"+ch+"-list").addClass("in").find('.panel-body li:nth-child('+p+') a').addClass('current');
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>