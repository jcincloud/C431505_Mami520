<!DOCTYPE html>
<html lang="zh-TW">
<!-- saved from url=(0014)about:internet -->

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@Resources.Res.System_Name:@ViewBag.Title</title>
    @RenderSection("CSS", required: false)
    <link rel="stylesheet" href="~/_Code/css/css/page.css">
    <!--[if IE 9]><link rel="stylesheet" href="@Url.Content("~/_Code/css/css/ie9-page.css")"><![endif]-->
</head>
<body class="@ViewBag.BodyClass">

    <div id="container">

        @if (ViewBag.IsFirstPage) {}
        else {
        <div id="header">
            <div class="wrap">
                
                <h1><a href="">@Resources.Res.System_Name</a></h1>

                <div id="menu">
                    <ul class="menu">
                        <li class="dropdown user">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa-user"></i>登入身分: manager
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="~/Base/Users/ChangePassword" tabindex="-1">
                                        <i class="fa-lock"></i> 修改密碼
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown activity">
                            <a href="#" class="dropdown-toggle"><i class="fa-power-off"></i>登出</a>
                        </li>
                    </ul>
                </div>

            </div>
        </div><!-- header //-->
        }

        <div id="main">

            @if (ViewBag.IsFirstPage) {
                @RenderBody()
            }
            
            else {

            <div id="content">

                <ul class="breadcrumb">
                    <li><a href=""><i class="fa-home"></i> @Resources.Res.System_Name</a></li>
                    @RenderSection("breadCrumb", required: false)
                    <li>@ViewBag.Title</li>
                </ul>

                @RenderBody()

            </div><!-- content //-->

            <div id="sidebar">
                <h3 class="title">
                    <span class="icon">
                        <i class="fa-square text-success"></i>
                        <i class="fa-square text-info"></i>
                        <i class="fa-square text-warning"></i>
                        <i class="fa-square text-danger"></i>
                    </span>
                    功能選單 MENU
                </h3>

                <div id="submenu">
                    <ul class="panel">

                        <li class="panel-heading">
                            <a class="panel-title collapsed" data-toggle="collapse" data-parent="#submenu" href="#submenu-1">
                                <i class="fa-list-alt"></i> 生產紀錄
                            </a>
                        </li>
                        <li id="submenu-1" class="panel-collapse collapse">
                            <ul class="panel-body">
                                <li><a href="~/Fake/Birth"><i class="fa-caret-right"></i>客戶基本資料 管理</a></li>
                                <li><a href="~/Fake/Birth2"><i class="fa-caret-right"></i>客戶生產紀錄 管理</a></li>
                                <li><a href="~/Fake/Birth3"><i class="fa-caret-right"></i>用餐編號 管理</a></li>
                            </ul>
                        </li>

                        <li class="panel-heading">
                            <a class="panel-title collapsed" data-toggle="collapse" data-parent="#submenu" href="#submenu-2">
                                <i class="fa-list-alt"></i> 銷售紀錄
                            </a>
                        </li>
                        <li id="submenu-2" class="panel-collapse collapse">
                            <ul class="panel-body">
                                <li><a href="~/Fake/Sell"><i class="fa-caret-right"></i>產品基本資料 管理</a></li>
                                <li><a href="~/Fake/Sell2"><i class="fa-caret-right"></i>產品銷售資料 管理</a></li>
                            </ul>
                        </li>

                        <li class="panel-heading">
                            <a class="panel-title collapsed" data-toggle="collapse" data-parent="#submenu" href="#submenu-3">
                                <i class="fa-list-alt"></i> 需求表
                            </a>
                        </li>
                        <li id="submenu-3" class="panel-collapse collapse">
                            <ul class="panel-body">
                                <li><a href="~/Fake/Require"><i class="fa-caret-right"></i>需求元素 管理</a></li>
                                <li><a href="~/Fake/Require2"><i class="fa-caret-right"></i>客戶需求 管理</a></li>
                            </ul>
                        </li>

                        <li class="panel-heading">
                            <a class="panel-title collapsed"  href="~/Fake/Schedule">
                                <i class="fa-list-alt"></i> 用餐紀錄 管理
                            </a>
                        </li>

                        <li class="panel-heading">
                            <a class="panel-title collapsed" data-toggle="collapse" data-parent="#submenu" href="#submenu-5">
                                <i class="fa-list-alt"></i> 菜單管理
                            </a>
                        </li>
                        <li id="submenu-5" class="panel-collapse collapse">
                            <ul class="panel-body">
                                <li><a href="~/Fake/Dishes"><i class="fa-caret-right"></i>基礎菜單 管理</a></li>
                                <li><a href="~/Fake/Dishes2"><i class="fa-caret-right"></i>基礎菜單分類 管理</a></li>
                                <li><a href="~/Fake/Dishes3"><i class="fa-caret-right"></i>組合菜單 管理</a></li>
                                <li><a href="~/Fake/Dishes3"><i class="fa-caret-right"></i>每日菜單 管理</a></li>
                            </ul>
                        </li>

                        <li class="panel-heading">
                            <a class="panel-title collapsed" data-toggle="collapse" data-parent="#submenu" href="#submenu-6">
                                <i class="fa-list-alt"></i> 禮品發放
                            </a>
                        </li>
                        <li id="submenu-6" class="panel-collapse collapse">
                            <ul class="panel-body">
                                <li><a href="~/Fake/Dishes"><i class="fa-caret-right"></i>活動基本資料 管理</a></li>
                                <li><a href="~/Fake/Dishes2"><i class="fa-caret-right"></i>禮品贈送紀錄 管理</a></li>
                            </ul>
                        </li>

                        <li class="panel-heading">
                            <a class="panel-title collapsed" data-toggle="collapse" data-parent="#submenu" href="#submenu-7">
                                <i class="fa-list-alt"></i> 通訊系統
                            </a>
                        </li>
                        <li id="submenu-7" class="panel-collapse collapse">
                            <ul class="panel-body">
                                <li><a href="~/Fake/Tel"><i class="fa-caret-right"></i>每日電訪名單 管理</a></li>
                                <li><a href="~/Fake/Tel2"><i class="fa-caret-right"></i>電訪名單 管理</a></li>
                                <li><a href="~/Fake/Tel3"><i class="fa-caret-right"></i>發送訊息 管理</a></li>
                                <li><a href="~/Fake/Tel4"><i class="fa-caret-right"></i>發送條件 管理</a></li>
                                <li><a href="~/Fake/Tel5"><i class="fa-caret-right"></i>文案內容 管理</a></li>
                            </ul>
                        </li>

                        <li class="panel-heading">
                            <a class="panel-title collapsed"  href="~/Fake/Schedule">
                                <i class="fa-list-alt"></i> 結帳作業
                            </a>
                        </li>

                        <li class="panel-heading">
                            <a class="panel-title collapsed" data-toggle="collapse" data-parent="#submenu" href="#submenu-9">
                                <i class="fa-list-alt"></i> 報表列印作業
                            </a>
                        </li>
                        <li id="submenu-9" class="panel-collapse collapse">
                            <ul class="panel-body">
                                <li><a href="~/Fake/Report"><i class="fa-caret-right"></i>每日菜單報表</a></li>
                                <li><a href="~/Fake/Report2"><i class="fa-caret-right"></i>產品銷售報表</a></li>
                                <li><a href="~/Fake/Report3"><i class="fa-caret-right"></i>應收帳款明細</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div><!-- sidebar //-->

            }

        </div><!-- main //-->

    </div><!-- container //-->

    <div id="footer">

        <a href="#content" class="goTop"><i class="fa-angle-double-up"></i></a>

    </div><!-- footer //-->

    <script src="~/Scripts/jquery/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/app/bootstrap.min.js"></script>
    <script>
        var ch = $('body').attr('class').match(/\d+/);
        $("#submenu-"+ch).addClass('in').prev('.panel-heading').children('.panel-title').removeClass('collapsed');
        var p = $('body').attr('class').match(/\d+$/);
        $("#submenu-"+ch).find('.panel-body li:nth-child('+p+') a').addClass('current');
        //左選單的當前頁標示
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>